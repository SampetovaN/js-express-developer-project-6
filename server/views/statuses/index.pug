extends ../layouts/application.pug

block content
  table.table.table-striped
    thead
      tr
        th=t('views.statuses.id')
        th= t('views.statuses.name')
        th
    tbody
      each status in statuses
        tr
          td= status.id
          td= status.name
          td
           .d-flex.flex-row.align-items-center
            a(href=route('editStatus', { id: status.id }))= t('views.statuses.editButton')
            +buttonTo(route('deleteStatus', { id: status.id} ), 'delete')(class="btn btn-link" value=t('views.statuses.deleteButton'))